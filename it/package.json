{
  "name": "my-mc-launcher",
  "private": true,
  "version": "0.1.0",
  "description": "Minecraft 启动器与开服器结合体（Vue 3 + Naive UI + Electron）",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "@vicons/ionicons5": "^0.12.0",
    "@xterm/xterm": "^5.5.0",
    "minecraft-java-core": "^4.2.3",
    "naive-ui": "^2.39.0",
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.16.5",
    "@vitejs/plugin-vue": "^5.1.4",
    "@xterm/addon-fit": "^0.10.0",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.8",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.yourname.mclauncher",
    "productName": "MC 启动器 & 开服器",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    }
  }
}